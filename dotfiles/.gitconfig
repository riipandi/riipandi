[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[oh-my-zsh]
	hide-dirty = 1
	hide-info = 1
[core]
	editor = nvim
	excludesfile = ~/.gitignore
	ignorecase = false
	autocrlf = false
	eol = lf
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED
[push]
  default = simple
[pull]
	rebase = false
[init]
	defaultBranch = main
[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
  ui = auto
[alias]
	alias = !git config -l | grep alias | cut -c 7-
	pr = !git reset --hard && git pull --rebase origin $(git symbolic-ref --short -q HEAD)
  ps = "!git push origin $(git rev-parse --abbrev-ref HEAD)"
  pl = "!git pull origin $(git rev-parse --abbrev-ref HEAD)"
	sync = "!git checkout --quiet $1 && git reset --hard && git pull --rebase origin $1 && git fetch --prune && git checkout - && git merge $1"
	ec = commit --allow-empty -m
	ci-test = !git commit --allow-empty -m \"empty-commit for test ci $(date +%Y_%m%d_%H%M%S)\" && git push
	ci-flush-cache = !git commit --allow-empty -m \"[flush cache] $(date +%Y_%m%d_%H%M%S)\" && git push
  hist = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all
  llog = log --graph --name-status --pretty=format:\"%C(red)%h %C(reset)(%cd) %C(green)%an %Creset%s %C(yellow)%d%Creset\" --date=relative
  slog = log --pretty=format:\"%C(yellow)%h%Creset - %C(green)%an%Creset, %ar : %s\"
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
  open = !git config --get remote.origin.url | sed 's/.git//g' | sed 's/:/\\//g' | awk '{print \"http://\"$1}'  | xargs open
[gpg]
	program = /usr/local/bin/gpg
[difftool]
	prompt = false
	trustExitCode = true
[mergetool]
	prompt = false
[safe]
	directory = /__w/
[url "https://<GITUSERNAME>@"]
	insteadOf = git://
[credential]
	helper = cache --timeout 7200
[gitbutler]
	aiModelProvider = openai
[rerere]
	enabled = true
